@model ProductCatalog.ViewModel.RegistrationViewModel

@{
    ViewData["Title"] = "Registeration";
}

<h1>Create New Account</h1>


<hr />
<div class="row align-items-center justify-content-between">
    <div class="col-md-6">
        <form asp-action="Registeration">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group m-3">
                <label asp-for="UserName" class="control-label pb-3"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Password" class="control-label pb-3"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="ConfirmPassword" class="control-label pb-3"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Email" class="control-label pb-3"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="PhoneNumber" class="control-label pb-3"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Address" class="control-label pb-3"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group pt-3 m-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-icon btn-dark w-100"><i class="fa-solid fa-arrow-right-to-bracket fs-4 me-2"></i>Register</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-5">
        <div class="">
            <img src="~/assets/images/register.svg" class="w-100" />
        </div>
       
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
