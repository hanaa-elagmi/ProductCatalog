@model ChangePasswordViewModel

<form asp-action="ChangePassword">
    <div class="form-group m-3">
        <label asp-for="CurrentPassword" class="control-label pb-3"></label>
        <input asp-for="CurrentPassword" class="form-control" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="form-group m-3">
        <label asp-for="NewPassword" class="control-label pb-3"></label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group m-3">
        <label asp-for="ConfirmPassword" class="control-label pb-3"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group pt-3 m-3">

        <input value="Change" type="submit" class="btn btn-dark w-100" />
    </div>
</form>